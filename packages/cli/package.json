{
	"name": "@gicho/cli",
	"version": "0.0.1-alpha.1",
	"description": "Essential CLI tools for building apps or libraries.",
	"keywords": [
		"base",
		"basis",
		"core",
		"changelog",
		"cli",
		"nodejs",
		"utilities",
		"utils",
		"release"
	],
	"license": "MIT",
	"author": "Lucas Choi",
	"repository": {
		"type": "git",
		"url": "https://github.com/gicho-dev/gicho",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/gicho-dev/gicho",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"source": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"gicho": "./dist/index.js"
	},
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"b": "tsdown",
		"build": "tsdown",
		"coverage": "vitest --coverage",
		"test:b": "vitest bench",
		"test": "vitest",
		"test:w": "vitest --watch",
		"types": "tsc --noEmit"
	},
	"dependencies": {
		"@gicho/core": "workspace:^"
	},
	"devDependencies": {
		"ansis": "catalog:dev",
		"tinyglobby": "catalog:dev"
	},
	"peerDependencies": {}
}
