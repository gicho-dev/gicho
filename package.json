{
	"name": "gicho-monorepo",
	"private": true,
	"packageManager": "pnpm@10.13.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/gichodev/gicho"
	},
	"type": "module",
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"scripts": {
		"build": "turbo build",
		"clean": "rimraf lib/*",
		"lint": "eslint .",
		"gen:eslint-rules-obj": "tsx scripts/gen-eslint-rules-obj.ts",
		"gen:eslint-types": "jiti scripts/gen-eslint-types.ts",
		"t1": "jiti scripts/test1.ts",
		"reset": "pnpm clean && pnpm install",
		"types": "turbo run types",
		"types:p": "turbo run types --filter=\"./packages/*\"",
		"all": "pnpm -F \"./{packages}/**\"",
		"p": "pnpm -F \"./packages/**\"",
		"cfg": "pnpm -F ./packages/config",
		"core": "pnpm -F ./packages/core",
		"node": "pnpm -F ./packages/node-utils"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.3",
		"@gicho/cli": "workspace:^",
		"@gicho/config": "workspace:^",
		"@hono/node-server": "catalog:",
		"@types/node": "catalog:",
		"@typescript-eslint/utils": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"ansis": "catalog:",
		"consola": "^3.4.2",
		"eslint": "catalog:",
		"hono": "catalog:",
		"jiti": "catalog:",
		"json-schema-to-typescript-lite": "catalog:",
		"prettier": "catalog:",
		"svelte": "catalog:",
		"tsdown": "catalog:",
		"tsx": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
