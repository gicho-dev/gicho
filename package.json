{
	"name": "gicho-monorepo",
	"private": true,
	"packageManager": "pnpm@10.14.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/gicho-dev/gicho"
	},
	"type": "module",
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"scripts": {
		"b": "pnpm build",
		"build": "pnpm -r build",
		"ch": "changeset",
		"clean": "NODE_OPTIONS='--conditions=source' tsx scripts/clean.ts",
		"format": "prettier --check .",
		"format:fix": "prettier --check --write .",
		"gen:east-asian-width": "jiti scripts/east-asian-width/gen-east-asian-width.ts",
		"gen:eslint-rules-obj": "tsx scripts/gen-eslint-rules-obj.ts",
		"gen:eslint-types": "jiti scripts/gen-eslint-types.ts",
		"lint": "eslint . --cache",
		"lint:fix": "pnpm lint -- --fix",
		"publish:all": "tsx scripts/publish.ts",
		"t1": "jiti scripts/test1.ts",
		"test": "pnpm -r test:r",
		"test:w": "pnpm -r test:w",
		"types": "pnpm -r types",
		"all": "pnpm -F \"./{packages}/**\"",
		"p": "pnpm -F \"./packages/**\"",
		"core": "pnpm -F ./packages/core",
		"cli": "pnpm -F ./packages/cli"
	},
	"devDependencies": {
		"@changesets/cli": "catalog:dev",
		"@clack/prompts": "^0.11.0",
		"@gicho/cli": "workspace:^",
		"@gicho/config": "catalog:dev",
		"@hono/node-server": "catalog:dev",
		"@types/node": "catalog:dev",
		"@vitest/coverage-v8": "catalog:dev",
		"ansis": "catalog:dev",
		"consola": "^3.4.2",
		"eslint": "catalog:dev",
		"hono": "catalog:dev",
		"jiti": "catalog:dev",
		"prettier": "catalog:dev",
		"tsdown": "catalog:dev",
		"tsx": "catalog:dev",
		"typescript": "catalog:dev",
		"vitest": "catalog:dev"
	}
}
